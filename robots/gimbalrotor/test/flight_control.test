<launch>
  <arg name="headless" default="False"/>
  <arg name="robot_id" default=""/>
  <arg name="robot_ns" value="gimbalrotor$(arg robot_id)"/>
  <arg name="airframe" default="quad"/>

  <include file="$(find gimbalrotor)/launch/bringup.launch">
    <arg name="real_machine" value="False" />
    <arg name="simulation" value="True" />
    <arg name="robot_id" value="$(arg robot_id)"/>
    <arg name="headless" value="$(arg headless)" />
    <arg name="airframe" value="$(arg airframe)" />
  </include>

  <!-- test codes -->
  <!-- 1. topics  -->
  <test name="publishtest" test-name="publishtest" pkg="rostest" type="publishtest" ns="$(arg robot_ns)" retry="1">
    <rosparam>
      topics:
        - name: uav/cog/odom
          timeout: 5.0
    </rosparam>
  </test>

  <!-- 2. control -->
  <test test-name="control_test" pkg="aerial_robot_base" type="hovering_check.py"  name="control_test"  ns="$(arg robot_ns)" time-limit="40" retry="2">
    <rosparam>
      hovering_delay: 5.0
      hovering_duration: 25.0
      convergence_thresholds: [0.02, 0.02, 0.02] # hovering threshold
    </rosparam>
  </test>

</launch>
