<?xml version="1.0"?>
<package>
  <name>hugmy</name>
  <version>1.3.3</version>
  <description>The basic packages for mini quadrotor</description>
  <maintainer email="chou@jsk.imi.i.u-tokyo.ac.jp">Bakui Chou</maintainer>
  <license>BSD</license>
  <author email="miyamichi@jsk.imi.i.u-tokyo.ac.jp">Ayano Miyamichi</author>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>aerial_robot_control</build_depend>
  <build_depend>aerial_robot_model</build_depend>
  <build_depend>pluginlib</build_depend>

  <run_depend>aerial_robot_base</run_depend>
  <run_depend>aerial_robot_control</run_depend>
  <run_depend>aerial_robot_estimation</run_depend>
  <run_depend>aerial_robot_model</run_depend>
  <run_depend>aerial_robot_msgs</run_depend>
  <run_depend>aerial_robot_simulation</run_depend>
  <run_depend>hydrus</run_depend>
  <run_depend>pluginlib</run_depend>

  <export>
    <aerial_robot_control plugin="${prefix}/plugins/navigation_plugin.xml" />
    <aerial_robot_control plugin="${prefix}/plugins/hugmy_control_plugin.xml" />
    <aerial_robot_control plugin="${prefix}/plugins/lpv_lqi_qp_plugin.xml" />
    <aerial_robot_control plugin="${prefix}/plugins/lqi_null_plugin.xml" />
  </export>

</package>
