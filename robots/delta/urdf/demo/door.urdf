<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro" name="door" >

  <link name="door_base">
    <inertial>
      <origin xyz="0.5 0.5 1"/>
      <mass value="10.0"/>
      <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"/>
    </inertial>
    <collision>
      <origin xyz="0.5 0.5 1"/>
      <geometry>
        <box size="1 1 2"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.5 0.5 1"/>
      <geometry>
        <box size="1 1 2"/>
      </geometry>
    </visual>
  </link>

  <link name="slide_door">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.3"/>
      <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.1 1.0 1.99"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.1 1.0 1.99"/>
      </geometry>
    </visual>
  </link>

  <link name="door_knob_link">
    <inertial>
      <origin xyz="0 0 0.1"/>
      <mass value="0.05"/>
      <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
    </visual>
  </link>

  <joint name="slide_door_joint" type="prismatic">
    <origin xyz="-0.5 0 1"/>
    <parent link="door_base"/>
    <child link="slide_door"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.0" upper="1.0" effort="0" velocity="0"/>
  </joint>

  <joint name="door_knob_joint" type="fixed">
    <origin xyz="-0.2 0.5 0"/>
    <parent link="slide_door"/>
    <child link="door_knob_link"/>
  </joint>

</robot>
