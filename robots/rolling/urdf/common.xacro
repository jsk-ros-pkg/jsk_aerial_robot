<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro" name="rolling_common" >
  <!-- general attribute -->
  <baselink name="fc" />
  <thrust_link name="thrust" />

  <m_f_rate value="-0.0172" /> <!-- drug torque rate -->
  <xacro:property name="max_force" value="18.0" /> <!-- [N] -->
  <xacro:property name="min_force" value="-18.0" /> <!-- [N] -->

  <!-- friction -->
  <xacro:macro name="friction" params="link">
    <gazebo reference="${link}">
      <mu1>0.4</mu1>
      <mu2>0.4</mu2>
    </gazebo>
  </xacro:macro>

  <xacro:macro name="damping_factor" params="link">
    <gazebo reference="${link}">
      <dampingFactor>0.00</dampingFactor>
    </gazebo>
  </xacro:macro>

</robot>
