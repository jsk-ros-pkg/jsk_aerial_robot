<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro" name="rolling_link" >
  <xacro:property name="rotor_offset" value="0.05" />

  <xacro:macro name="rolling_module" params="self child baselink rotor_direction">
    ### link ###
    <link name="link${self}">
      <inertial>
        <origin xyz="0.38739299 0 0.01379733" rpy="0 0 0" />
        <mass value="0.37963504" />
        <inertia
            ixx="0.00024971" iyy="0.01676743" izz="0.01658659"
            ixy="0.00000001" ixz="0.00097414" iyz="0.00000001" />
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://rolling/urdf/mesh/link.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.3 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.6135 0.052 0.15" />
        </geometry>
      </collision>
    </link>
    ### link${self} ###
    <xacro:friction link="link${self}" />

    <!-- dummy root link for KDL -->
    <xacro:if value="${self == 1}">
      <link name="root">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.00001"/>
          <inertia
              ixx="0.000001" ixy="0.0" ixz="0.0"
              iyy="0.000001" iyz="0.0"
              izz="0.000001"/>
        </inertial>
      </link>
      <joint name="root_joint" type="fixed">
        <parent link="root"/>
        <child link="link${self}"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 0 1"/>
      </joint>
    </xacro:if>

    <!-- set the fcu frame -->
    <xacro:if value="${baselink}">
      <link name="fc">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.00001"/>
          <inertia
              ixx="0.000001" ixy="0.0" ixz="0.0"
              iyy="0.000001" iyz="0.0"
              izz="0.000002"/>
        </inertial>
      </link>
      <joint name="fc_joint" type="fixed">
        <child link="fc" />
        <parent link="link${self}" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <axis xyz="0 0 1"/>
      </joint>
    </xacro:if>

    <!-- gimbal  -->
    <link name="gimbal_link${self}">
      <inertial>
        <origin xyz="0.00827927 -0.00000218 0.00743013" rpy="0 0 0" />
        <mass value="0.28410134" />
        <inertia
            ixx="0.00073581" iyy="0.00066892" izz="0.00028893"
            ixy="0.00000741" ixz="-0.00014260" iyz="0.00000004" />
      </inertial>
      <visual>
        <origin rpy="0 ${(self % 2 * 2 - 1) * 0.2} 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://rolling/urdf/mesh/roll_gimbal_module.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 ${rotor_offset}" />
        <geometry>
          <cylinder radius="0.2" length="0.05" />
        </geometry>
      </collision>
    </link>

    ### joints ###
    #### link joint ####
    <xacro:unless value="${self == child}">
      <joint name="joint${self}" type="revolute" >
        <limit effort="10.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.1"/>
        <origin xyz="0.6135 0 0" rpy="0 0 0" />
        <parent link="link${self}" />
        <child  link="link${child}" />
        <axis xyz="0 0 1"/>
        <dynamics damping="0.9" friction="0.05"/>
      </joint>
    </xacro:unless>

    #### gimbal joint ####
    <joint name="gimbal${self}" type="continuous" >
      <limit effort="3" lower="-3.14" upper="3.14" velocity="12.5"/>
      <parent link="link${self}"/>
      <child link="gimbal_link${self}"/>
      <origin xyz="0.3 0 0" rpy="0 ${((self % 2) * 2 - 1) * 0.2} 0" />
      <axis xyz="1 0 0"/>
      <dynamics damping="0.1" friction="0.0"/>
    </joint>

    #### rotor parent link (virtual) ####
    <link name="rotor_parent${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00001"/>
        <inertia
            ixx="0.000001" ixy="0.0" ixz="0.0"
            iyy="0.000001" iyz="0.0"
            izz="0.000001"/>
      </inertial>
    </link>

    #### thrust link (virtual) ####
    <link name="thrust${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00001"/>
        <inertia
            ixx="0.000001" ixy="0.0" ixz="0.0"
            iyy="0.000001" iyz="0.0"
            izz="0.000001"/>
      </inertial>
    </link>
    <xacro:damping_factor link="thrust${self}" />

    #### rotor parent link joint (virtual) ####
    <joint name="rotor_parent_link_joint${self}" type="fixed">
      <parent link="gimbal_link${self}"/>
      <child link="rotor_parent${self}"/>
      <origin rpy="0 0 0" xyz="0 0 ${rotor_offset}"/> # TODO: update rotor position
      <axis xyz="0 0 1"/>
    </joint>

    #### rotor joint (virtual) ####
    <joint name="rotor${self}" type="continuous">
      <limit effort="100.0" lower="${min_force}" upper="${max_force}" velocity="0.5"/>
      <parent link="rotor_parent${self}"/>
      <child link="thrust${self}"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="0 0 ${rotor_direction}"/>
    </joint>

    #### hardware interface ####
    <xacro:unless value="${self == child}">
      <transmission name="joint_tran${self}">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="joint${self}">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="servo${self}">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          <mechanicalReduction>1</mechanicalReduction>
        </actuator>
      </transmission>
    </xacro:unless>

    <transmission name="gimbal_tran${self}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="gimbal${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="gimbal_servo${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="rotor${self}_tran">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="rotor${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
      </joint>
      <actuator name="rotor${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>

</robot>
