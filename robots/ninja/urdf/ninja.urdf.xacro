      <parent link="main_body"/>
      <child link="battery_1"/>
      <origin rpy="0 0 ${pi/2-0.977}" xyz="-0.10215 -0.07574 -0.04"/>
      <axis xyz="0 0 0"/>
    </joint>

    <link name="battery_1">
      <inertial>
        <origin xyz="0.0 0.0 -0.019" rpy="0 0 0"/>
        <mass value="0.44600000"/>
        <inertia
            ixx = "0.00012215" ixy = "0.00000000" ixz = "0.00000000"
            iyx = "0.00000000" iyy = "0.00067139" iyz = "0.00000000"
            izx = "0.00000000" izy = "0.00000000" izz = "0.00068918"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://ninja/urdf/mesh/battery.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>
    <xacro:damping_factor link="battery_1"/>

    <joint name="battry_2_joint" type="fixed">
      <parent link="main_body"/>
