<?xml version="1.0"?>
<package>
  <name>agile_multirotor</name>
  <version>1.3.0</version>
  <description>The basic packages for assemble quadrotors</description>

  <maintainer email="kozuka@jsk.imi.i.u-tokyo.ac.jp">Haruki Kozuka</maintainer>
  <license>BSD</license>
  <url type="website">https://github.com/jsk-ros-pkg/jsk_aerial_robot</url>
  <author email="kozuka@jsk.imi.i.u-tokyo.ac.jp">Haruki Kozuka</author>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>aerial_robot_control</build_depend>
  <build_depend>aerial_robot_model</build_depend>
  <build_depend>aerial_robot_msgs</build_depend>
  <build_depend>cmake_modules</build_depend>
  <build_depend>roscpp</build_depend>

  <run_depend>aerial_robot_control</run_depend>
  <run_depend>aerial_robot_model</run_depend>
  <run_depend>aerial_robot_msgs</run_depend>
  <run_depend>roscpp</run_depend>
  <run_depend>gazebo_ros</run_depend>

  <export>
    <gazebo_ros gazebo_model_path="${prefix}/gazebo_model/models"/>
  </export>
  
</package>
