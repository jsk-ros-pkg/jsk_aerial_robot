<launch>
  <arg name="headless" default="False"/>
  <arg name="onboards_model" default="tilt_20deg_201907" />

  <include file="$(find hydrus)/launch/bringup.launch">
    <arg name="real_machine" value="False" />
    <arg name="simulation" value="True" />
    <arg name="control_mode" value="0" />
    <arg name="onboards_model" value="$(arg onboards_model)" />
    <arg name="headless" value="$(arg headless)" />
  </include>

  <!-- test codes -->
  <!-- 1. topics  -->
  <test name="publishtest"
        test-name="publishtest"
        pkg="rostest" type="publishtest" retry="2">
    <rosparam>
      topics:
        - name: /uav/cog/odom
          timeout: 5.0
    </rosparam>
  </test>

  <!-- 2. control -->
  <test test-name="control_test" pkg="hydrus" type="control_check.py"  name="control_test"  time-limit="180" retry="2">
    <rosparam>
      init_joint_names: ['joint1', 'joint2', 'joint3']
      init_joint_angles: [1.57, 1.57, 1.57]
      tasks:
        - command: [0, 1.57, 1.57]
          threshold: [0.05, 0.05, 0.06]
          reset: [1.57, 1.57, 1.57]
          timeout: 10
          reset_duration: 5
        - command: [0.78, 1.57, 0.78]
          threshold: [0.02, 0.02, 0.02]
          timeout: 10
          reset_duration: 5
    </rosparam>
    <param name="init_form_duration" value="5.0" />
    <param name="hovering_duration" value="25.0" />
    <remap from="joint_states" to ="/hydrusx/joint_states" />
    <remap from="joints_ctrl" to ="/hydrusx/joints_ctrl" />
  </test>

</launch>
